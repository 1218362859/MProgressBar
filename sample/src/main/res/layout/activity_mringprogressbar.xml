<?xml version="1.0" encoding="utf-8"?>
<com.monke.immerselayout.ImmerseLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:padding="10dp"
    tools:context="com.monke.mprogressbar.sample.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.monke.mprogressbar.MRingProgressBar
            android:id="@+id/mrp_1"
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:bgbordercolor="#403F44"
            app:bgborderwidth="6dp"
            app:bgdrawable="#696969"
            app:fontdrawable="#FF7200"
            app:cursordrawable="@drawable/selector_progress_point"
            app:cursordrawable_width="15dp"
            app:cursordrawable_height="15dp"/>

        <FrameLayout
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginLeft="20dp">
            <com.monke.mprogressbar.MRingProgressBar
                android:id="@+id/mrp_2"
                android:layout_width="140dp"
                android:layout_height="140dp"
                app:progresswidth="70dp"
                app:bgbordercolor="#3B3B3B"
                app:bgborderwidth="25dp"
                app:bgdrawable="#2E2E2E"
                app:fontdrawable="#0168CD"/>
            <TextView
                android:id="@+id/tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0%"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:textStyle="bold"/>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <FrameLayout
            android:layout_width="140dp"
            android:layout_height="140dp">
            <com.monke.mprogressbar.MRingProgressBar
                android:id="@+id/mrp_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:progresswidth="20dp"
                app:bgdrawable="@drawable/ring_nor"
                app:fontdrawable="@drawable/ring_sel"
                app:startangle="-90"/>
            <TextView
                android:id="@+id/tv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0%"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:textStyle="bold"/>
        </FrameLayout>

        <com.monke.mprogressbar.MRingProgressBar
            android:id="@+id/mrp_4"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginLeft="20dp"
            app:progresswidth="70dp"
            app:bgdrawable="#2E2E2E"
            app:fontdrawable="#0168CD"
            app:startangle="-90"/>
    </LinearLayout>
</com.monke.immerselayout.ImmerseLinearLayout>